[github]
 user = kuschti
[push]
  default = current
[pull]
  # Pull current branch even if you've never pushed it before
  default = current
[color]
  diff = auto
  status = auto
  pager = true
  branch = auto
  ui = auto
  interactive = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  added = yellow
  changed = green
  untracked = blue
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  aa = add --all
  ap = add --patch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci = commit -v
  co = checkout
  pf = push --force-with-lease
  st = status
[core]
  #whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = code --wait
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = false
  tool = meld
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[difftool]
  prompt = false
[credential]
  helper = cache --timeout=3600

[include]
  path = ~/.gitconfig.client